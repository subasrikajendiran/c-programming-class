#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    char name[50];
};

int main() {
    int n, i, newRecords;

    printf("Enter number of existing students: ");
    scanf("%d", &n);

    struct Student students[100]; // Maximum capacity 100

    for(i = 0; i < n; i++) {
        printf("\nEnter details for Student %d:\n", i + 1);
        printf("ID: ");
        scanf("%d", &students[i].id);
        printf("Name: ");
        scanf(" %[^\n]", students[i].name);
    }

    printf("\nEnter number of new students to add: ");
    scanf("%d", &newRecords);

    for(i = n; i < n + newRecords; i++) {
        printf("\nEnter details for Student %d:\n", i + 1);
        printf("ID: ");
        scanf("%d", &students[i].id);
        printf("Name: ");
        scanf(" %[^\n]", students[i].name);
    }

    n = n + newRecords; 

    printf("\nUpdated Student List:\n");
    for(i = 0; i < n; i++) {
        printf("Student %d -> ID: %d, Name: %s\n", i + 1, students[i].id, students[i].name);
    }

    return 0;
}
