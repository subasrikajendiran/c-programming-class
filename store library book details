#include <stdio.h>

struct Book {
    int bookId;
    char bookName[50];
    char author[50];
    float price;
};

int main() {
    struct Book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.bookId);

    printf("Enter Book Name: ");
    scanf(" %[^\n]", b.bookName);

    printf("Enter Author Name: ");
    scanf(" %[^\n]", b.author);

    printf("Enter Book Price: ");
    scanf("%f", &b.price);

    printf("\nLibrary Book Details:\n");
    printf("Book ID   : %d\n", b.bookId);
    printf("Book Name : %s\n", b.bookName);
    printf("Author    : %s\n", b.author);
    printf("Price     : %.2f\n", b.price);

    return 0;
}
