#include <stdio.h>
#include <string.h>

struct Item {
    int id;
    char name[50];
    int quantity;
};

int main() {
    struct Item items[100];
    int n=0, choice, i, searchId, found;
    
    do {
        printf("\n1.Add 2.Display 3.Search 4.Update 5.Exit\nEnter choice: ");
        scanf("%d",&choice);

        switch(choice) {
            case 1:
                printf("Enter Item ID: "); scanf("%d",&items[n].id);
                printf("Enter Name: "); scanf(" %[^\n]", items[n].name);
                printf("Enter Quantity: "); scanf("%d",&items[n].quantity);
                n++; break;

            case 2:
                printf("\nInventory:\n");
                for(i=0;i<n;i++)
                    printf("ID:%d, Name:%s, Qty:%d\n", items[i].id, items[i].name, items[i].quantity);
                break;

            case 3: 
                printf("Enter ID to search: "); scanf("%d",&searchId);
                found=0;
                for(i=0;i<n;i++){
                    if(items[i].id==searchId){
                        printf("Found -> ID:%d, Name:%s, Qty:%d\n", items[i].id, items[i].name, items[i].quantity);
                        found=1; break;
                    }
                }
                if(!found) printf("Item not found.\n");
                break;

            case 4: 
                printf("Enter ID to update: "); scanf("%d",&searchId);
                found=0;
                for(i=0;i<n;i++){
                    if(items[i].id==searchId){
                        printf("Enter new Name: "); scanf(" %[^\n]", items[i].name);
                        printf("Enter new Quantity: "); scanf("%d", &items[i].quantity);
                        printf("Updated -> ID:%d, Name:%s, Qty:%d\n", items[i].id, items[i].name, items[i].quantity);
                        found=1; break;
                    }
                }
                if(!found) printf("Item not found.\n");
                break;

            case 5: printf("Exiting...\n"); break;
            default: printf("Invalid choice\n");
        }
    } while(choice != 5);

    return 0;
}
