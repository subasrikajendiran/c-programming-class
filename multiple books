#include <stdio.h>

struct Book {
    int bookId;
    char title[50];
    float price;
};

int main() {
    int n, i;

    printf("Enter number of books: ");
    scanf("%d", &n);

    struct Book books[n];

    for(i = 0; i < n; i++) {
        printf("\nEnter details for Book %d:\n", i + 1);

        printf("Book ID: ");
        scanf("%d", &books[i].bookId);

        printf("Book Title: ");
        scanf(" %[^\n]", books[i].title);

        printf("Book Price: ");
        scanf("%f", &books[i].price);
    }

    printf("\nAll Book Details:\n");
    for(i = 0; i < n; i++) {
        printf("\nBook %d:\n", i + 1);
        printf("Book ID   : %d\n", books[i].bookId);
        printf("Book Title: %s\n", books[i].title);
        printf("Book Price: %.2f\n", books[i].price);
    }

    return 0;
}
