#include <stdio.h>
#include <string.h>

int main() {
    char mobile[20];
    int i, valid = 1;

    printf("Enter mobile number: ");
    scanf("%s", mobile);

    if (strlen(mobile) != 10) {
        valid = 0;
    } else {
        for (i = 0; i < 10; i++) {
            if (mobile[i] < '0' || mobile[i] > '9') {
                valid = 0;
                break;
            }
        }
    }

    if (valid)
        printf("Valid mobile number\n");
    else
        printf("Invalid mobile number\n");

    return 0;
}
