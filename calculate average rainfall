#include <stdio.h>

int main() {
    int n, i;
    float rainfall, total = 0, average;

    printf("Enter number of days: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        printf("Enter rainfall for day %d (in mm): ", i);
        scanf("%f", &rainfall);
        total += rainfall;
    }

    average = total / n;

    printf("\nTotal rainfall = %.2f mm\n", total);
    printf("Average rainfall = %.2f mm\n", average);

    return 0;
}
