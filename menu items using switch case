#include <stdio.h>

int main() {
    int choice;
    float bill = 0;

    printf("Menu:\n");
    printf("1. Tea - Rs.10\n");
    printf("2. Coffee - Rs.20\n");
    printf("3. Juice - Rs.30\n");

    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch (choice) {
        case 1:
            bill = 10;
            printf("You selected Tea\n");
            break;
        case 2:
            bill = 20;
            printf("You selected Coffee\n");
            break;
        case 3:
            bill = 30;
            printf("You selected Juice\n");
            break;
        default:
            printf("Invalid Choice\n");
            return 0;
    }

    printf("Bill Amount = Rs.%.2f\n", bill);

    return 0;
}
